@using BarraByTech.Services
@using System.IO
@inject IWebHostEnvironment Env
@inject ClienteService ClienteService

@{
    ViewData["Title"] = "Home";
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>BarraBytech - Sua loja de Hardware</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&family=Montserrat:wght@600;700&family=Orbitron:wght@500;700&display=swap" rel="stylesheet" />
    <link rel="shortcut icon" href="img/Icon.jpg" type="image/x-icon">

    List<string> bannersEncontrados = new List<string>();
    var categorias = await ClienteService.GetCategorias();
    string pastaBannersFisica = System.IO.Path.Combine(Env.WebRootPath, "Banners");

    if (Directory.Exists(pastaBannersFisica))
    {
        var todosArquivos = Directory.GetFiles(pastaBannersFisica);

        foreach (var categoria in categorias)
        {
            var termoBusca = categoria.CategoriaNome;

            var arquivoEncontrado = todosArquivos
                .FirstOrDefault(f =>
                {
                    var nomeArquivo = System.IO.Path.GetFileName(f);
                    return nomeArquivo.StartsWith(termoBusca, StringComparison.OrdinalIgnoreCase)
                           && (nomeArquivo.EndsWith(".jpg") || nomeArquivo.EndsWith(".png") || nomeArquivo.EndsWith(".webp"));
                });

            if (arquivoEncontrado != null)
            {
                bannersEncontrados.Add($"/Banners/{System.IO.Path.GetFileName(arquivoEncontrado)}");
            }
        }
    }

    var todosProdutos = await ClienteService.GetProdutos();
    var produtosEmPromocao = todosProdutos
        .Where(p => p.Promocao > 0)
        .OrderByDescending(p => p.Promocao)
        .Take(10)
        .ToList();
}

<style>
    .horizontal-scroll-list {
        display: flex;
        overflow-x: scroll;
        -webkit-overflow-scrolling: touch;
        scroll-snap-type: x mandatory;
        scroll-behavior: smooth;
        scrollbar-width: thin;
        scrollbar-color: #dc3545 #f8f9fa;
        gap: 1.5rem;
        padding-bottom: 1rem;
    }

        /* Estilo para a barra de rolagem no WebKit (Chrome, Safari, Edge) */
        .horizontal-scroll-list::-webkit-scrollbar {
            height: 8px;
        }

        .horizontal-scroll-list::-webkit-scrollbar-thumb {
            background-color: #dc3545; /* Cor da alça de rolagem */
            border-radius: 10px;
        }

        .horizontal-scroll-list::-webkit-scrollbar-track {
            background-color: #f8f9fa; /* Cor do fundo da barra de rolagem */
        }

    .scroll-card-wrapper {
        flex: 0 0 auto;
        width: 250px;
        scroll-snap-align: start;
        transition: transform 0.2s ease-in-out;
    }

        .scroll-card-wrapper:hover {
            transform: translateY(-5px);
        }

    .card-promo {
        border: 2px solid var(--bs-danger);
        transition: box-shadow 0.3s;
    }

        .card-promo:hover {
            box-shadow: 0 8px 16px rgba(220, 53, 69, 0.3) !important;
        }

    .nav-links {
        padding: 1rem 0;
        background-color: #f8f9fa;
        border-bottom: 1px solid #e9ecef;
    }

    .carousel-item img {
        height: 400px;
        object-fit: cover;
    }

    /* Estilos aprimorados para os botões de categoria */
    .nav-links .btn-outline-primary {
        /* Design */
        border-radius: 0.5rem;
        padding: 8px 15px;
        transition: all 0.3s ease-in-out;
        /* Cores e Texto */
        font-family: 'Montserrat', sans-serif;
        font-weight: 600;
        font-size: 0.95rem;
        text-transform: uppercase;
        color: #0d47a1 !important; /* Azul escuro */
        border: 2px solid #0d47a1 !important; /* Borda azul */
        background-color: transparent !important;
    }

        .nav-links .btn-outline-primary i {
            color: #ffae00; /* Laranja/Amarelo no ícone */
            font-size: 1.1rem;
        }

        .nav-links .btn-outline-primary:hover {
            /* Hover: Inverte as cores */
            color: #ffffff !important;
            background-color: #0d47a1 !important;
            border-color: #0d47a1 !important;
            box-shadow: 0 4px 8px rgba(0, 71, 161, 0.3); /* Sombra para profundidade */
            opacity: 1;
        }

            .nav-links .btn-outline-primary:hover i {
                color: #ffffff; /* Ícone branco no hover */
            }
</style>

<div class="nav-links">
    <div class="container d-flex justify-content-center gap-4 flex-wrap">
        @foreach (var categoria in categorias)
        {
            <a class="btn btn-outline-primary d-flex align-items-center gap-2"
               asp-controller="Categorias"
               asp-action="Detalhes"
               asp-route-id="@categoria.CategoriaId">
                <i class="bi bi-columns-gap"></i> @categoria.CategoriaNome
            </a>
        }
    </div>
</div>

<div class="container py-4">
    @if (bannersEncontrados.Any())
    {
        <div id="carouselBanner" class="carousel slide mb-5 shadow-lg" data-bs-ride="carousel">
            <div class="carousel-indicators">
                @for (int i = 0; i < bannersEncontrados.Count; i++)
                {
                    <button type="button" data-bs-target="#carouselBanner" data-bs-slide-to="@i"
                            class="@(i == 0 ? "active" : "")" aria-current="true"></button>
                }
            </div>
            <div class="carousel-inner rounded-3">
                @for (int i = 0; i < bannersEncontrados.Count; i++)
                {
                    <div class="carousel-item @(i == 0 ? "active" : "")" data-bs-interval="5000">
                        <img src="@bannersEncontrados[i]" class="d-block w-100"
                             alt="Banner @(i + 1)">
                    </div>
                }
            </div>

            <button class="carousel-control-prev" type="button" data-bs-target="#carouselBanner" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Anterior</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselBanner" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Próximo</span>
            </button>
        </div>
    }


    <section class="my-5">
        <h2 class="mb-4 text-center fw-bold text-danger">
            <i class="bi bi-fire me-2"></i> Ofertas Relâmpago!
        </h2>
        <p class="text-center text-muted mb-4">Aproveite os descontos por tempo limitado nos melhores produtos!</p>

        @if (produtosEmPromocao.Any())
        {
            <div class="horizontal-scroll-list">
                @foreach (var produto in produtosEmPromocao)
                {
                    await Html.RenderPartialAsync("_ProdutoCardPartial", produto);
                }
            </div>
        }
        else
        {
            <div class="alert alert-info text-center py-3 rounded-3 shadow-sm">
                <i class="bi bi-info-circle me-2"></i> Não há produtos em promoção no momento.
            </div>
        }
    </section>

</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>