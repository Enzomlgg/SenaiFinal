@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>BarraBytech - Cadastro</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            background: #f5f5f5;
        }

        .auth-card {
            border-radius: 16px;
            padding: 10px;
        }

        .footer {
            margin-top: 80px;
            text-align: center;
            padding: 20px 0;
            background: #fff;
        }

        .brand {
            font-weight: bold;
        }

        .or-line {
            display: flex;
            align-items: center;
            text-align: center;
        }

            .or-line hr {
                flex: 1;
            }

            .or-line span {
                padding: 0 10px;
                font-size: 14px;
                color: #888;
            }

        .btn-google {
            background: #fff;
            border: 1px solid #ddd;
        }

        .btn-apple {
            background: #000;
            color: #fff;
        }

            .btn-apple:hover {
                background: #333;
                color: #fff;
            }
    </style>
</head>
<body>

    <div class="container my-5 d-flex justify-content-center">
        <div class="col-12 col-md-6 col-lg-5">
            <div class="auth-card card h-100">
                <div class="card-body">
                    <h3 class="auth-title text-primary text-center mb-4">
                        <i class="bi bi-person-plus me-2"></i>Cadastre-se
                    </h3>

                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Nome" class="form-control" placeholder="Nome completo" />
                            <label asp-for="Input.Nome">Nome completo</label>
                            <span asp-validation-for="Input.Nome" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Cidade" class="form-control" placeholder="Cidade" />
                            <label asp-for="Input.Cidade">Cidade</label>
                            <span asp-validation-for="Input.Cidade" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Telefone" class="form-control" placeholder="Telefone" />
                            <label asp-for="Input.Telefone">Telefone</label>
                            <span asp-validation-for="Input.Telefone" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Nascimento" class="form-control" type="date" placeholder="Data de nascimento" />
                            <label asp-for="Input.Nascimento">Data de nascimento</label>
                            <span asp-validation-for="Input.Nascimento" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Cpf" class="form-control" placeholder="CPF" />
                            <label asp-for="Input.Cpf">CPF</label>
                            <span asp-validation-for="Input.Cpf" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" id="senhaRegister" />
                            <label asp-for="Input.Password">Senha</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                            <button class="btn btn-outline-secondary border-0 position-absolute end-0 me-3"
                                    style="top: 50%; transform: translateY(-50%); z-index: 5;"
                                    type="button" data-bs-toggle="toggle-pass" data-target="#senhaRegister">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" id="confirmarSenhaRegister" />
                            <label asp-for="Input.ConfirmPassword">Confirmar senha</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            <button class="btn btn-outline-secondary border-0 position-absolute end-0 me-3"
                                    style="top: 50%; transform: translateY(-50%); z-index: 5;"
                                    type="button" data-bs-toggle="toggle-pass" data-target="#confirmarSenhaRegister">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>


                        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Criar conta</button>

                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener("click", function (e) {
            if (e.target.closest("[data-bs-toggle='toggle-pass']")) {
                const btn = e.target.closest("[data-bs-toggle='toggle-pass']");
                const target = document.querySelector(btn.getAttribute("data-target"));
                if (target.type === "password") {
                    target.type = "text";
                    btn.innerHTML = '<i class="bi bi-eye-slash"></i>';
                } else {
                    target.type = "password";
                    btn.innerHTML = '<i class="bi bi-eye"></i>';
                }
            }
        });
    </script>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>