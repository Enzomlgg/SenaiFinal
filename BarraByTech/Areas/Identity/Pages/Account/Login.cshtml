@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>BarraBytech - Autenticação</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        body {
            background: #f5f5f5;
        }

        .auth-card {
            border-radius: 16px;
            padding: 10px;
        }

        /* Estilos adicionados do Register para consistência */
        .footer {
            margin-top: 80px;
            text-align: center;
            padding: 20px 0;
            background: #fff;
        }

        .brand {
            font-weight: bold;
        }

        .or-line {
            display: flex;
            align-items: center;
            text-align: center;
        }

            .or-line hr {
                flex: 1;
            }

            .or-line span {
                padding: 0 10px;
                font-size: 14px;
                color: #888;
            }

        .btn-google {
            background: #fff;
            border: 1px solid #ddd;
        }

        .btn-apple {
            background: #000;
            color: #fff;
        }

            .btn-apple:hover {
                background: #333;
                color: #fff;
            }

        /* Estilo para links discretos */
        .discrete-link {
            display: block; /* Garante que cada link fique em sua própria linha */
            text-align: center;
            margin-top: 10px;
        }

            .discrete-link a {
                color: #6c757d; /* Cor de texto secundário do Bootstrap */
                text-decoration: none;
                font-size: 0.9rem;
            }

                .discrete-link a:hover {
                    color: #495057;
                    text-decoration: underline;
                }
    </style>
</head>

<body>

    <div class="container my-5 d-flex justify-content-center">
        <div class="col-12 col-md-6 col-lg-5">
            <div class="auth-card card h-100">
                <div class="card-body">
                    <h3 class="auth-title text-primary text-center mb-4">
                        <i class="bi bi-box-arrow-in-right me-2"></i>Entrar
                    </h3>

                    <form id="loginForm" method="post">

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" type="email" class="form-control" placeholder="Seu e-mail" required />
                            <label asp-for="Input.Email">E-mail</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" type="password" class="form-control" id="senhaLogin" placeholder="Senha" required />
                            <label asp-for="Input.Password">Senha</label>
                            <button class="btn btn-outline-secondary border-0 position-absolute end-0 me-3"
                                    style="top: 50%; transform: translateY(-50%); z-index: 5;"
                                    type="button" data-bs-toggle="toggle-pass" data-target="#senhaLogin">
                                <i class="bi bi-eye"></i>
                            </button>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="Input.RememberMe" class="form-check-input" type="checkbox" id="lembrar">
                            <label class="form-check-label" for="lembrar">Lembrar-me</label>
                        </div>

                        <button id="login-submit" type="submit" class="btn btn-primary w-100 btn-lg mb-3">
                            Entrar
                        </button>

                        <div class="discrete-link">
                            <a id="forgot-password" asp-page="./ForgotPassword">Esqueceu sua senha?</a>
                        </div>
                        <div class="discrete-link">
                            <a id="forgot-password" asp-page="./ResendEmailConfirmation">Enviar Email Confirmação</a>
                        </div>
                        <div class="discrete-link">
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Criar uma nova conta</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.addEventListener("click", function (e) {
            if (e.target.closest("[data-bs-toggle='toggle-pass']")) {
                const btn = e.target.closest("[data-bs-toggle='toggle-pass']");
                const target = document.querySelector(btn.getAttribute("data-target"));

                if (target.type === "password") {
                    target.type = "text";
                    btn.innerHTML = '<i class="bi bi-eye-slash"></i>';
                } else {
                    target.type = "password";
                    btn.innerHTML = '<i class="bi bi-eye"></i>';
                }
            }
        });
    </script>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }

</body>
</html>