@inject SignInManager<IdentityUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<link rel="stylesheet" href="~/css/identity-manage.css" />

<ul class="nav nav-pills flex-column manage-nav">
    <li class="nav-item">
        <a class="nav-link @ManageNavPages.IndexNavClass(ViewContext)"
           id="profile" asp-page="./Index">
            Profile
        </a>
    </li>

    <li class="nav-item">
        <a class="nav-link @ManageNavPages.EmailNavClass(ViewContext)"
           id="email" asp-page="./Email">
            Email
        </a>
    </li>

    <li class="nav-item">
        <a class="nav-link @ManageNavPages.ComprasNavClass(ViewContext)"
           id="compras" asp-page="/Account/Compras/Index">
            Compras
        </a>
    </li>

    <li class="nav-item">
        <a class="nav-link @ManageNavPages.EnderecosNavClass(ViewContext)"
           id="enderecos" asp-page="/Account/Enderecos/Index">
            Endereços
        </a>
    </li>

    <li class="nav-item">
        <a class="nav-link @ManageNavPages.ChangePasswordNavClass(ViewContext)"
           id="change-password" asp-page="./ChangePassword">
            Password
        </a>
    </li>

    @if (hasExternalLogins)
    {
        <li class="nav-item">
            <a class="nav-link @ManageNavPages.ExternalLoginsNavClass(ViewContext)"
               id="external-login" asp-page="./ExternalLogins">
                External logins
            </a>
        </li>
    }
</ul>
