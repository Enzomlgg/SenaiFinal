@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Esqueceu sua senha?";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>BarraBytech - Esqueceu sua senha?</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Seu CSS -->
    <link rel="stylesheet" href="~/css/forgot-password.css" />
</head>
<body>

    <div class="container d-flex justify-content-center align-items-center p-5">
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card shadow auth-card p-4">

                <h3 class="text-center mb-3 text-primary fw-bold">
                    <i class="bi bi-unlock-fill me-2"></i>Esqueceu sua senha?
                </h3>

                <p class="text-center text-muted mb-4">
                    Digite seu email e enviaremos um link para redefinir sua senha.
                </p>

                <form method="post">
                    @Html.AntiForgeryToken()

                    <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username"
                               placeholder="email@example.com" />
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 btn-lg">
                        Enviar link
                    </button>
                </form>

                <div class="text-center mt-4">
                    <a asp-page="./Login" class="back-link">
                        <i class="bi bi-arrow-left"></i> Voltar para o login
                    </a>
                </div>

            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />

</body>
</html>